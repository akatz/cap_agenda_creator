<% title "Agendas" %>

<table id="agendas_list">
  <tr>
    <th>Agendas</th>
  </tr>
  <% for agenda in @agendas %>
    <tr class="<%= cycle("even", "odd", :name => "row_class") -%>">
      <td><%=h agenda.date %></td>
      <td><%= link_to "Show", agenda %></td>
      <td><%= link_to "Edit", edit_agenda_path(agenda) %></td>
      <td><%= link_to "Destroy", agenda, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<% form_tag agendas_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<p><%= link_to "New Agenda", new_agenda_path %></p>
